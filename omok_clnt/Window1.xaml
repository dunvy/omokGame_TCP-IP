<Window x:Class="chessclnt.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chessclnt"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="800">
    <Grid Background="#f4e7d7">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Content="초대할 유저 이름을 입력해주세요." HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" FontSize="20"/>
            <Grid HorizontalAlignment="Center" Height="36" Grid.Row="2" VerticalAlignment="Center" Width="268">
                <TextBox Name="invite"  HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="200" HorizontalContentAlignment="Center" FontSize="25"/>
                <Button Content="초대" VerticalAlignment="Center" FontSize="20" Width="50" HorizontalAlignment="Left" Margin="213,0,0,0" Click="Button_Click" Height="35" />
            </Grid>
        </Grid>
    </Grid>
</Window>
